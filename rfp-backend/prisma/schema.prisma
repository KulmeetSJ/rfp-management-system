generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Rfp {
  id                 Int        @id @default(autoincrement())
  title              String
  rawInput           String
  budget             Float?
  deliveryWithinDays Int?
  paymentTerms       String?
  warranty           String?
  structuredJson     Json
  createdAt          DateTime   @default(now())
  proposals          Proposal[]
}

model Vendor {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  createdAt DateTime   @default(now())
  proposals Proposal[]
}

model Proposal {
  id           Int      @id @default(autoincrement())
  rfp          Rfp      @relation(fields: [rfpId], references: [id])
  rfpId        Int
  vendor       Vendor   @relation(fields: [vendorId], references: [id])
  vendorId     Int
  rawEmailText String
  extractedJson Json
  createdAt    DateTime @default(now())
}